@model HotelMVC.Models.ReservationModels.ReservationIndexViewModel
@{
    ViewData["Title"] = "Listagem de reservas";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-9">
                <h3 class="">Listagem de reservas</h3>
            </div>
            <div class="col-md-3">
                <a asp-controller="Reservations" asp-action="Store" class="btn btn-success btn-block">Adicionar nova reserva</a>
            </div>
        </div>
    </div>
</div>

<br />

<div class="text-center">
    <table class="table table-striped table-hover" id="myTable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Cliente</th>
                <th scope="col">Quarto</th>
                <th scope="col">Ocupantes</th>
                <th scope="col">Entrada prevista</th>
                <th scope="col">Saída prevista</th>
                <th scope="col">Status</th>
                <th scope="col">Checks </th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Reservations.Any())
            {
                foreach (HotelMVC.Models.ReservationModels.ReservationsModel reservation in Model.Reservations)
                {
                    <tr>
                        <th scope="row">@reservation.Id</th>
                        <td>@Model.Customers.Find(c => c.Id == reservation.CustomerId).Name</td>
                        <td>@Model.Rooms.Find(r => r.Id == reservation.RoomId).Id</td>
                        <td>@reservation.NumberOfOccupants</td>
                        <td>@reservation.ExpectedEntryDate</td>
                        <td>@reservation.ExpectedDepartureDate</td>
                        <td>@(@reservation.Status == 1 ? "Confirmado" : "Não confirmado")</td>
                        <td>
                            <div class="btn-group" role="group">
                                @*Let it click only if the booking status is confirmed.*@
                                @if (@reservation.Status == 1)
                                {
                                    <button asp-controller="#" asp-action="#" class="btn btn-primary" data-toggle="modal" data-target="#entryModal">IN</button>
                                }
                                else
                                {
                                    <button asp-controller="#" asp-action="#" disabled class="btn btn-primary" data-toggle="modal" data-target="#entryModal">IN</button>
                                }

                                @*Let click only if you are already checked in.*@
                                <button asp-controller="#" asp-action="#" class="btn btn-info" data-toggle="modal" data-target="#exitModal">OUT</button>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-route-id="@reservation.Id" asp-controller="Reservations" asp-action="Edit" class="btn btn-warning">Editar</a>
                                <a role="button" class="btn btn-danger btnDelete" data-value="@reservation.Id">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div id="modalContent"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="entryModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Realizar CHECK-IN</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <label for="inputEntryDate" class="form-label">Data de entrada</label>
                    <input type="date" readonly class="form-control" id="inputEntryDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-12 mt-3">
                    <label for="inputEntryHour" class="form-label">Hora entrada</label>
                    <input type="time" readonly class="form-control" id="inputEntryHour" value="@DateTime.Now.ToString("HH:mm")">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exitModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Realizar CHECK-OUT</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <label for="inputExitDate" class="form-label">Data de saída</label>
                    <input type="date" readonly class="form-control" id="inputExitDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-12 mt-3">
                    <label for="inputExitHour" class="form-label">Hora saída</label>
                    <input type="time" readonly class="form-control" id="inputExitHour" value="@DateTime.Now.ToString("HH:mm")">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });

        $(document).ready(function() {
            $(".btnDelete").click(function() {
                var id = $(this).data("value");
                $("#modalContent").load("/Reservations/Details/" + id, function() {
                    $("#deleteModal").modal("show");
                });
            });
        });
    </script>
}